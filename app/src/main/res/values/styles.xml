<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app.primary</item>
        <item name="colorPrimaryDark">@color/app.primary.dark</item>
        <item name="colorAccent">@color/app.accent</item>
        <item name="android:navigationBarColor">@color/app.primary.dark</item>
        <item name="android:windowBackground">@color/app.primary.dark</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/app.primary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/app.primary</item>
        <item name="colorPrimaryDark">@color/app.primary.dark</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/font.light.primary</item>
        <item name="actionMenuTextColor">@color/font.light.primary</item>
        <item name="android:textColorSecondary">@color/font.light.primary</item>
    </style>
    <style name="AppTheme.Toolbar.OverlayMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/app.primary</item>
        <item name="android:textColor">@color/font.light.primary</item>
    </style>

</resources>
